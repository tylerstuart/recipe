<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
	<% @users.each do |user| %>
	<li>
      <%= gravatar_image_tag user.email, :size => 30 %>
      <%= link_to "#{user.first_name} #{user.last_name}", user %> 
      <% if current_user.admin? %>
       | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?", :title => "Delete #{user.first_name} #{user.last_name}" %>
       <% end %>
	</li>
	<% end %>
</ul>

<%= will_paginate %>